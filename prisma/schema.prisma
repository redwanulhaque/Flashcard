generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}




datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




// Flashcard Deck
model StudyTool {
  id         Int         @id @default(autoincrement())
  name       String
  flashcards Flashcard[] @relation("ToolFlashcards")
}




// Individual Flashcard
model Flashcard {
  id       Int       @id @default(autoincrement())
  question String
  answer   String
  toolId   Int
  tool     StudyTool @relation("ToolFlashcards", fields: [toolId], references: [id])
}
